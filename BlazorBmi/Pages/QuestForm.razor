@page "/quest"
<h3>質問フォーム</h3>
<div class="form-group">
    <EditForm Model="namemodel" OnValidSubmit="onValidSubmit">
        <lable class="col-form-label">お名前</lable>
        <InputText id="name" @bind-Value="namemodel.name" class="form-control" />
    </EditForm>
</div>
<div class="form-group">
    <EditForm Model="agemodel" OnValidSubmit="onValidSubmit">
        <div class="form-group">
            <lable class="col-form-label">年齢</lable>
            <InputNumber id="age" @bind-Value="agemodel.age" class="form-control" />
        </div>
    </EditForm>
</div>
<div class="form-group">
    <EditForm Model="addressmodel" OnValidSubmit="onValidSubmit">
        <div class="form-group">
            <lable class="col-form-label" for="zipcode">郵便番号</lable>
            <InputText id="zipcode" @bind-Value="addressmodel.zipcode" class="form-control" />
        </div>
    </EditForm>
</div>
<div class="form-group">
    <EditForm Model="prefecturemodel" OnValidSubmit="onValidSubmit">
        <lable for="prefecture" class="col-form-label">都道府県</lable>
        <InputSelect id="prefectureId" @bind-Value="prefecturemodel.Name"
                     class="form-control">
            @foreach (var it in prefectureList)
            {
                <option value="@it.ID">@it.Name</option>
            }
        </InputSelect>
    </EditForm>
</div>
<div class="form-group">
    <div>好きなプログラミング言語</div>
    <EditForm Model="likepgmodel" OnValidSubmit="onValidSubmit">
        <div class="form-check form-check-inline">
            <InputCheckbox @bind-Value="likepgmodel.likeVB" class="form-check-input" />
            <lable class="col-check-label" for="vblike">VB</lable>
        </div>
        <div class="form-check form-check-inline">
            <InputCheckbox @bind-Value="likepgmodel.likeCsharp" class="form-check-input" />
            <lable class="col-check-label" for="vblike">C#</lable>
        </div>
        <div class="form-check form-check-inline">
            <InputCheckbox @bind-Value="likepgmodel.likeFsharp" class="form-check-input" />
            <lable class="col-check-label" for="vblike">F#</lable>
        </div>
    </EditForm>
</div>
