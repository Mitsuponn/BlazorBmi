@page "/copyright";

<h3>子コンポーネントを使用</h3>
<table class="table">
    <tr>
        <td>名前</td>
        <td>@bmi.Name</td>
    </tr>
    <tr>
        <td>身長</td>
        <td>@bmi.Height</td>
    </tr>
    <tr>
        <td>体重</td>
        <td>@bmi.Weight</td>
    </tr>
</table>

<div style = "font-size:@fontSize">
    計算結果は @bmi.Bmi です。
</div>

@*子コンポーネント呼び出し*@
<BlazorBmi.Component.Copyright/>

@code {
    private BmiItem bmi = new BmiItem()
    {
        Name = "今村 光治",
        Height = 165.0,
        Weight = 60.0,
    };
    private string fontSize = "32px"; 
}
