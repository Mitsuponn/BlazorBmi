@page "/bmilist";
<h3>リスト表示</h3>
<!-- 子コンポーネントを使用。リスト表示する -->
<table class="table">
    <thead class="thead-light">
        <tr>
            <td>名前</td>
            <td>身長</td>
            <td>体重</td>
            <td>BMI</td>
        </tr>
    </thead>
    @foreach (var it in Items)
    {
        <BlazorBmi.Component.BmiChild Item="@it"/>
    }
</table>

@*子コンポーネント呼び出し*@
<BlazorBmi.Component.Copyright Name="Mitsuharu Imamura" Year="2021" />

@code {
    private List<BmiItem> Items { get; set; }
    protected override void OnInitialized()
    {
        this.Items = new List<BmiItem>();
        this.Items.Add(new BmiItem() { Name = "I.M", Height = 165, Weight = 60 });
        this.Items.Add(new BmiItem() { Name = "K.K", Height = 170, Weight = 55 });
        this.Items.Add(new BmiItem() { Name = "N.R", Height = 155, Weight = 70 });
    }
}
